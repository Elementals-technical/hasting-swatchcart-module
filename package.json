{
  "name": "hasting-swatchcart-module",
  "version": "1.0.6",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "dist/main.cjs",
  "module": "dist/main.js",
  "types": "dist/main.d.ts",
  "style": "dist/assets/index.css",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "require": "./dist/main.cjs",
      "import": "./dist/main.js",
      "default": "./dist/main.js"
    }
  },
  "sideEffects": [
    "**/*.css"
  ],
  "peerDependencies": {
    "@reduxjs/toolkit": ">=2",
    "react": ">=18",
    "react-dom": ">=18",
    "react-redux": ">=9"
  },
  "scripts": {
    "dev": "vite -c vite.app.config.ts",
    "build": "tsc -b && vite build",
    "build:site": "vite build -c vite.app.config.ts",
    "build:lib": "tsc --p ./tsconfig-build.json && vite build -c vite.lib.config.ts",
    "build:cdn": "tsc --p ./tsconfig-build.json && vite build -c vite.cdn.config.ts",
    "build:all": "npm run build:lib && npm run build:cdn",
    "lint": "eslint .",
    "preview": "vite preview -c vite.app.config.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "start": "vite preview -c vite.app.config.ts --host 0.0.0.0 --port ${PORT:-8080}"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.11",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@reduxjs/toolkit": ">=2",
    "@tailwindcss/postcss": "^4.1.16",
    "@tailwindcss/vite": "^4.1.14",
    "@tanstack/react-virtual": "^3.13.12",
    "autoprefixer": "^10.4.21",
    "clsx": "^2.1.1",
    "lucide-react": "^0.487.0",
    "react": ">=18",
    "react-dom": ">=18",
    "react-markdown": "^10.1.0",
    "react-redux": ">=9",
    "rehype-raw": "^7.0.0",
    "tailwind-merge": "^3.3.0",
    "terser": "^5.44.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.7.2",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "glob": "^11.0.3",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "sass": "^1.93.2",
    "sass-embedded": "^1.93.2",
    "tailwindcss": "^4.1.14",
    "tw-animate-css": "^1.3.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-lib-inject-css": "^2.2.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
